<?xml version="1.0"?>
<config>
	<modules>
		<SSTech_Secure>
			<version>1.0.0</version>
		</SSTech_Secure>
	</modules>
	<global>
		<models>
			<sstechsecure>
				<class>SSTech_Secure_Model</class>
			</sstechsecure>
		</models>
	</global>
	<frontend>
		<events>
			<controller_action_predispatch>
				<observers>
					<sstech_secure_observer>
						<type>singleton</type>
						<class>sstechsecure/observer</class>
						<method>apply_securefrontend_check_frontend</method>
					</sstech_secure_observer>
				</observers>
			</controller_action_predispatch>     
		</events>
	</frontend>
	<adminhtml>
		<events>
			<controller_action_predispatch>
				<observers>
					<sstech_secure_observer>
						<type>singleton</type>
						<class>sstechsecure/observer</class>
						<method>apply_secureadmin_check_admin</method>
					</sstech_secure_observer>
				</observers>
			</controller_action_predispatch>     
		</events>
	</adminhtml>
</config>